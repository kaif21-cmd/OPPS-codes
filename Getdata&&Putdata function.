 cost:: 49000
 Name:: iphone
 cost:: 52000
 Name:: google
 cost:: 82000
 ANOTHER EXAMPLE----------------------------------------------------------------------------------------------
 ----------------------------------------------------------------------
 #include<iostream>
 using namespace std;
 class item
 {
     string name;
     float cost;
     public:
     void getdata(string a,int b);
     void putdata(void)
     {
         cout<< "Product :" <<name <<"\n";
         cout<< "Rate:" <<cost <<"\n";
     }
 };
 void item :: getdata( string a,int b)
 {
     name=a;
     cost=b;
 }
 int main()
 {
     item x;
     cout<<"\n prdocut name and rate " <<"\n";
     x.getdata("kaif",299.5);
     x.putdata();
 }
 OUTPUT:-
prdocut name and rate 
Product :kaif
Rate:299

 
